{
  "include": [
    "src/*/*.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tsconfig.json",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "eslint.config.js",
    "next.config.js",
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "checkJs": false,
    "sourceMap": false,
    "allowJs": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "target": "ES6",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "dist"
  }
}