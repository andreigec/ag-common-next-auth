{
  
  "include": [
    "src/*/*.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tsconfig.json",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "eslint.config.js",
    "next.config.js",
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "checkJs": false,
    "sourceMap": false,
    "allowJs": true,
    "isolatedModules": true,
    "target": "ES6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  }
}